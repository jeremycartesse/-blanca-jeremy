</div>
<!-- countdown starting -->
<div class="wrapper-beige">
  <div class="container">
    <div class="row">
      <div class="col-sm-offset-4 col-sm-12 ">
        <div class="text-center">
          <ul style="list-style: none; float: left; padding-top: 0.5vh;">
            <li>
              <h4><%= t('countdown') %> :</h4>
            </li>
            <li>
              <div id="getting-started" style="color: #408395; font-weight: stronger; font-size: 1.5em;"></div></div>
              <% content_for(:after_js) do %>
              <script type="text/javascript">
              $('#getting-started').countdown('2017/07/22', function(event) {
              $(this).html(event.strftime('%w <%= t('week') %>  %d <%= t('day') %> %H <%= t('hour') %> %M <%= t('minute') %> %S <%= t('second') %>'));
              });
              </script>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="text-center">
    <h4><%= t('annonce_title') %></h4>
    <br>
  </div>
  </div>

</div>
