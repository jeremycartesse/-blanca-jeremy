<!-- countdown starting -->
<div class="wrapper-grey">
  <div class="container">
    <div class="row">
      <div class="col-sm-offset-4 col-sm-4">
        <div class="text-center">
          <ul style="list-style: none; float: left; padding-top: 0.5vh;">
            <li>
              <h4><%= t('countdown') %> :</h4>
            </li>
            <li>
              <div id="getting-started"></div>
              <% content_for(:after_js) do %>
              <script type="text/javascript">
              $('#getting-started').countdown('2017/07/22', function(event) {
              $(this).html(event.strftime('%w <%= t('week') %>  %d <%= t('day') %> %H <%= t('hour') %> %M <%= t('minute') %> %S <%= t('second') %>'));
              });
              </script>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
