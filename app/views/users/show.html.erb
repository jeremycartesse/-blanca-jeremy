<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 " style="padding-top: 5vh; ">
      <div>
        <div class="row ">
          <div class="col-xs-12 col-sm-12 col-md-12 text-center" >
            <div style="padding-bottom: 25px;">
              <% if @user.photo_avatar? %>
              <%= cl_image_tag @user.photo_avatar.path, :width => 150, :height => 150,
             :crop => :fill, :gravity => :face, :radius => :max, :style => "border-radius: 50%;" %>
              <% else %>
              <%= image_tag "photo_avatar.jpg", :style =>"border-radius: 50%; width: 150px; height: 150px; " %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="row ">
          <div class="col-xs-12 col-sm-12 col-md-12 text-center"" >
            <div class="row ">
              <div class="col-xs-12 col-sm-12 col-md-12 text-center">
                <div style="display: inline-flex;justify-content: space-around;">
                  <div style="color:#408395 ;font-family: Quicksand; font-size: 35px;"><%= @user.first_name %></div>
                  <div style="color:#408395;font-family: Quicksand; font-size: 35px;font-weight: bolder; padding-left: 10px"><%= @user.last_name %></div>
                </div>
              </div>
              <div style="color:grey;font-family: Quicksand; font-size: 25px; display: inline-flex;justify-content: space-around;">
                <%= @user.nationality %>
                <p style="padding-left: 25px;"><%= @user.famille %></p>
              </div>
              <br>
              <div style="color:grey;font-family: Quicksand; font-size: 25px; display: inline-flex;justify-content: space-around;">
                <%= "+" + @user.email %>
                <p style="padding-left: 25px;"><%=  @user.phone_number %></p>
              </div>
            </div>
          </div>
          <div class="row ">
            <div class="col-xs-10 col-sm-10 col-md-10 text-justify col-xs-offset-1" style="font-family: Work Sans; font-size: 25px;color:grey; font-weight: bold">
              <%=  @user.description %>
            </div>
          </div>
          <br>
          <div class="text-center">
          <% if @user.id == current_user.id %>
            <%= link_to(t('edit_user'), edit_user_path(current_user), class: "hvr-grow btn btn-medium") %>
            <%= link_to(t('all_user'), users_path, class: "hvr-grow btn btn-medium") %>
            <% else %>
            <%= link_to(t('all_user'), users_path, class: "hvr-grow btn btn-medium") %>
            <% end %>
            <br>
            <br>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
