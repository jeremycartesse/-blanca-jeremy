<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 " style="padding-top: 5vh; ">
    <div>

      <div class="row ">
        <div class="col-xs-12 col-sm-12 col-md-12 text-center" >
          <div style="padding-bottom: 25px;"><%= image_tag "table.jpg", :style =>"border-radius: 50%; width: 150px; height: 150px; " %></div>
        </div>
      </div>
      <div class="row ">
        <div class="col-xs-12 col-sm-12 col-md-12 text-center"" >
          <div class="row ">

          <div class="col-xs-12 col-sm-12 col-md-12 text-center">
          <div style="display: inline-flex;justify-content: space-around;">
            <div style="color:#990000 ;font-family: Quicksand; font-size: 35px;"><%= @user.first_name %></div>

            <div style="color:#660000;font-family: Quicksand; font-size: 35px;font-weight: bolder; padding-left: 10px"><%= @user.last_name %></div>
          </div>
          </div>
          <div style="color:grey;font-family: Quicksand; font-size: 25px; display: inline-flex;justify-content: space-around;">
            <%= @user.nationality %>
            <p style="padding-left: 25px;"><%= @user.phone_number %></p>
          </div>
          <br>
          <div style="color:grey;font-family: Quicksand; font-size: 25px; display: inline-flex;justify-content: space-around;">
            <%= "+" + @user.email %>
            <p style="padding-left: 25px;"><%=  @user.phone_number %></p>
          </div>
        </div>
      </div>
      <div class="row ">
        <div class="col-xs-10 col-sm-10 col-md-10 text-justify col-xs-offset-1" style="font-family: Work Sans; font-size: 25px;color:grey; font-weight: bold">
          <%=  @user.description %>
        </div>
      </div>

      <%= link_to 'edit', edit_user_path(current_user) %>
      <%= link_to 'all user', users_path %>


      </div>
    </div>
  </div>
</div>
</div>
